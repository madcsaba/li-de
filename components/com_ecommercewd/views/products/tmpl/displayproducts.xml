<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="All Products">
        <message>
            <![CDATA[All Products]]>
        </message>
    </layout>

    <state>
        <name>All Products</name>
        <description>All Products page</description>
        <config>
            <fields name="params">
                <fieldset name="Basic" label="Basic">
                    <field type="radio"
                           name="arrangement"
                           label="Arrangement"
                           default="thumbs"
                           description="Products default arrangement">
                        <option value="thumbs">Thumbnails</option>
                        <option value="list">List</option>
                    </field>								
                    <field addfieldpath="/administrator/components/com_ecommercewd/menu_form_fields"
                           type="listcategory"
                           name="category_id"
                           default="0"
                           label="Filter by category"
                           description="Filter by category" />
					<field addfieldpath="/administrator/components/com_ecommercewd/menu_form_fields"
                           type="checkboxmanufacturer"
                           name="manufacturer_id"
                           default="0"
                           label="Filter by manufacturer"
                           description="Filter by manufacturer" />	
					<field type="text"
                           name="max_price"
                           default=""
                           label="Filter by maximum price"
                           description="Filter by maximum price" />	
					<field type="text"
                           name="min_price"
                           default=""
                           label="Filter by minimum price"
                           description="Filter by minimum price" />						   
                    <field type="radio"
                           name="date_added"
                           label="Filter by date added"
                           default="0"
                           description="Filter by date added">
						<option value="0">Any date</option>
                        <option value="1">Today</option>
                        <option value="2">Last week</option>
                        <option value="3">Last two weeks</option>
                        <option value="4">Last month</option>

                    </field>	
                    <field type="list"
                           name="min_rating"
                           label="Filter by minimum rating"
                           default="0"
                           description="Filter by minimum rating">		
						<option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>

                    </field>
						   
					<field name="tags" type="listtags" extension="com_ecommercewd"  addfieldpath="/administrator/components/com_ecommercewd/menu_form_fields"  label="Filter by tags"  description="Filter by tags"  />				
	   
                    <field type="list"
                           name="ordering"
                           label="Order by"
                           default=""
                           description="Order by">
						<option value="">Relevance</option>						   
						<option value="name">Name</option>
                        <option value="manufacturer">Manufacturer</option>
                        <option value="price">Price</option>
                        <option value="reviews_count">Number of reviews</option>
                        <option value="rating">Rating</option>
                    </field>
	                <field type="radio"
                           name="order_dir"
                           label="Order direction"
                           default="asc"
                           description="Order direction">		
						<option value="asc">ASC</option>
                        <option value="desc">DESC</option>
                    </field>					   
                </fieldset>
            </fields>
        </config>
    </state>
</metadata>