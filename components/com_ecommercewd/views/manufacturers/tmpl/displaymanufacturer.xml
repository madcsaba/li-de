<?xml version="1.0" encoding="utf-8"?>
<metadata>
    <layout title="Manufacturer page">
        <message>
            <![CDATA[Manufacturer page]]>
        </message>
    </layout>

    <state>
        <name>Manufacturer page</name>
        <description>Manufacturer page</description>
        <config>
            <fields name="params">
                <fieldset name="Basic" label="Basic">
                    <field addfieldpath="/administrator/components/com_ecommercewd/menu_form_fields"
                           type="listmanufacturer"
                           name="manufacturer_id"
                           default="0"
                           label="Manufacturer"
                           description="Select manufacturer">
                    </field>

                    <field type="radio"
                           name="show_info"
                           label="Show info"
                           default="1"
                           description="Show manufacturer info">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                    </field>

                    <field type="radio"
                           name="show_products"
                           label="Show products"
                           default="1"
                           description="Show manufacturer products">
                        <option value="0">No</option>
                        <option value="1">Yes</option>
                    </field>

                    <field type="text"
                           name="products_count"
                           label="Number of products"
                           value="12"
                           description="Number of products to show" />


                    <!--<field addfieldpath="/administrator/components/com_ecommercewd/menu_form_fields"
                           type="listtheme"
                           name="theme_id"
                           default="0"
                           label="Theme"
                           description="Select theme for this page">
                    </field>-->
                </fieldset>
            </fields>
        </config>
    </state>
</metadata>