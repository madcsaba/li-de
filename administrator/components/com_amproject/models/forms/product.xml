<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
															
		<field
			id="title"
			name="title"
			type="text"
			required="true"
			label="Title"
			description="title_Desc"
			class="inputbox"
			size="40"/>						
								
						
		<field
			id="description"
			name="description"
			type="editor"
			label="Description"
			description="description_Desc"
			class="inputbox"
			buttons="readmore,pagebreak"/>
							
		<field
			id="published"
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JField_Published_Label"
			description="JField_Published_Desc">
			<option
				value="1">
				JOption_Published</option>
			<option
				value="0">
				JOption_UnPublished</option>
			<option
				value="-1">
				JOption_Archived</option>
			<option
				value="-2">
				JOption_Trashed</option>
		</field>
                          								
		<field
			id="unit"
			name="unit"
			type="text"
			required="false"
			label="Unit"
			description="unit_Desc"
			class="inputbox"
			size="40"/>						
								
														
		<field
			name="ordering"
			label="Ordering"
			type="text"/>

		<field
			name="state"
			label="State"
			type="list">
      <option value="0">Disabled</option>
      <option value="1">Enabled</option>
     </field>
								
	</fields>	
		
</form>	