<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
    <name>COM_ECOMMERCEWD</name>
    <creationDate>July 2014</creationDate>
    <author>Web-Dorado</author>
    <authorEmail>info@web-dorado.com</authorEmail>
    <authorUrl>http://Web-Dorado.com</authorUrl>
    <copyright>Copyright (C) Web-Dorado.com 2015. All rights reserved.</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
    <version>1.2.20</version>
    <description>Ecommerce WD is an innovative Joomla extension for creating online stores and e-commerce pages in your Joomla website. </description>
	<scriptfile>script.ecommercewd.php</scriptfile>
	<install>
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall>
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>
	<media  destination="com_ecommercewd">
			<folder>uploads/videos</folder>
			<folder>uploads/images</folder>
    </media>
    <administration>
        <menu>COM_ECOMMERCEWD</menu>
        <submenu>
		    <menu controller="products">COM_ECOMMERCEWD_PRODUCTS</menu>
            <menu controller="categories">COM_ECOMMERCEWD_CATEGORIES</menu>
            <menu controller="manufacturers">COM_ECOMMERCEWD_MANUFACTURERS</menu>
            <menu controller="orders">COM_ECOMMERCEWD_ORDERS</menu>
            <menu controller="reports">COM_ECOMMERCEWD_REPORTS</menu>
			<menu controller="users">COM_ECOMMERCEWD_USERS</menu>
			<menu controller="countries">COM_ECOMMERCEWD_LOCALIZATION</menu>
            <menu controller="payments">COM_ECOMMERCEWD_PAYMENTS</menu>		
			<menu controller="themes">COM_ECOMMERCEWD_THEMES</menu>
            <menu controller="options">COM_ECOMMERCEWD_OPTIONS</menu>		
			<menu controller="installtools">COM_ECOMMERCEWD_TOOLS_MANAGER</menu>
        </submenu>
        <files folder="admin">
			<folder>controllers</folder>
			<folder>css</folder>
			<folder>elements</folder>
			<folder>framework</folder>
			<folder>helpers</folder>
			<folder>images</folder>
			<folder>js</folder>
            <folder>language</folder>
            <folder>libraries</folder>
            <folder>menu_form_fields</folder>
            <folder>models</folder>
            <folder>sql</folder>
            <folder>tables</folder>
            <folder>tmp</folder>
            <folder>views</folder>
            <filename>ecommercewd.php</filename>
            <filename>index.html</filename>
        </files>
        <languages folder="admin/language">
            <language tag="en-GB">en-GB.com_ecommercewd.sys.ini</language>
            <language tag="en-GB">en-GB.com_ecommercewd.ini</language>
        </languages>
    </administration>
	<files folder="site">
		<folder>bootstrap</folder>
		<folder>controllers</folder>
		<folder>css</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>
		<filename>router.php</filename>
		<filename>ecommercewd.php</filename>
		<filename>index.html</filename>
	</files>
    <languages folder="site/language">
        <language tag="en-GB">en-GB.com_ecommercewd.ini</language>
    </languages>
</extension>